---
import SidebarLayout from "@/layouts/SidebarLayout.astro";
---

<SidebarLayout title="Posting">
    <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-semibold text-gray-800 dark:text-gray-200">
            Posting
        </h1>
    </div>
    <div>
        <div>
            <!-- judul -->
            <label
                for="username"
                class="block text-sm text-gray-500 dark:text-gray-300"
            >
                Judul Berita
            </label>

            <input
                type="text"
                placeholder="Judul Berita"
                class="block mt-2 w-full placeholder-gray-400/70 dark:placeholder-gray-500 rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"
            />
        </div>
        <!-- judul -->
        <label
            for="username"
            class="block text-sm text-gray-500 dark:text-gray-300 mt-4"
        >
            Deskripsi Berita
        </label>

        <input
            type="text"
            placeholder="Deskripsi Berita"
            class="block mt-2 w-full placeholder-gray-400/70 dark:placeholder-gray-500 rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"
        />
        <!-- file upload -->
        <div>
            <label
                for="file"
                class="block text-sm text-gray-500 dark:text-gray-300 mt-4"
            >
                Gambar Banner Berita
            </label>

            <label
                for="dropzone-file"
                class="flex flex-col items-center w-full max-w-lg p-5 mx-auto mt-2 text-center bg-white border-2 border-gray-300 border-dashed cursor-pointer dark:bg-gray-900 dark:border-gray-700 rounded-xl"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-8 h-8 text-gray-500 dark:text-gray-400"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 16.5V9.75m0 0l3 3m-3-3l-3 3M6.75 19.5a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33 3 3 0 013.758 3.848A3.752 3.752 0 0118 19.5H6.75z"
                    ></path>
                </svg>

                <h2
                    class="mt-1 font-medium tracking-wide text-gray-700 dark:text-gray-200"
                >
                    Gambar Banner Berita
                </h2>

                <p
                    class="mt-2 text-xs tracking-wide text-gray-500 dark:text-gray-400"
                >
                    Unggah gambar berita disini atau seret dan lepas file disini
                    untuk mengunggah gambar berita Anda.
                </p>

                <input id="dropzone-file" type="file" class="hidden" />
            </label>
        </div>
        <!-- kategori -->
        <div>
            <label
                for="kategori"
                class="block text-sm text-gray-500 dark:text-gray-300 mt-4"
            >
                Kategori Berita
            </label>

            <select
                class="block mt-2 w-full rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"
            >
                <option value="0">Pilih Kategori</option>
                <option value="1">Pendidikan</option>
                <option value="2">Teknologi</option>
                <option value="3">Olahraga</option>
                <option value="4">Kesehatan</option>
            </select>
        </div>
        <!-- konten -->
        <div>
            <label
                for="Description"
                class="block text-sm text-gray-500 dark:text-gray-300 mt-4"
            >
                Konten Berita
            </label>

            <textarea
                placeholder="lorem..."
                class="block mt-2 w-full placeholder-gray-400/70 dark:placeholder-gray-500 rounded-lg border border-gray-200 bg-white px-4 h-32 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"
            ></textarea>

            <p class="mt-3 text-xs text-gray-400 dark:text-gray-600">
                Lorem ipsum dolor sit amet consectetur adipisicing elit.
            </p>
        </div>
        <!-- Tags -->
        <div>
            <label
                for="kategori"
                class="block text-sm text-gray-500 dark:text-gray-300 mt-4"
            >
                Tags
            </label>

            <select
                class="block mt-2 w-full rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:focus:border-blue-300"
            >
                <option value="0">Pilih Kategori</option>
                <option value="1">Pendidikan</option>
                <option value="2">Teknologi</option>
                <option value="3">Olahraga</option>
                <option value="4">Kesehatan</option>
            </select>
        </div>
        <!-- tombol -->
        <div class="flex justify-end mt-6">
            <button
                class="px-6 py-2.5 text-sm font-medium text-white bg-blue-500 rounded-lg focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50"
            >
                Posting
            </button>
    </div>
</SidebarLayout>
